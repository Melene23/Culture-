# .env.example (MISE À JOUR)
APP_NAME=CultureBenin
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://culture-benin.onrender.com

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# ====================================
# BASE DE DONNÉES POSTGRESQL (RENDER)
# ====================================
DB_CONNECTION=pgsql
# DB_HOST sera fourni par Render
# DB_PORT sera fourni par Render
# DB_DATABASE sera fourni par Render
# DB_USERNAME sera fourni par Render
# DB_PASSWORD sera fourni par Render

# ====================================
# SESSIONS (IMPORTANT !)
# ====================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# ====================================
# CACHE ET FILESYSTEM
# ====================================
CACHE_STORE=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync

# ====================================
# LOGS (RENDER utilise stderr)
# ====================================
LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ====================================
# MAIL (configuration basique)
# ====================================
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@culture-benin.com"
MAIL_FROM_NAME="${APP_NAME}"

# ====================================
# VITE/PRODUCTION
# ====================================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
